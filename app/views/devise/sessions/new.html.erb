
<div class="container">
  <div class="login">
    <h2 style="text-align:center;">Log in</h2>
    
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs form-group">
        <%= f.input :email, required: false, autofocus: true, input_html: { class: "form-control", placeholder: "Enter email"} %>
        <%= f.input :password, required: false, input_html: {class: "form-control", placeholder: "Password"} %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
    
      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "btn btn-primary" %>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>
  </div>
</div>
