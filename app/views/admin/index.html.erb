                  <th scope="col" >전화번호</th>
                  <th scope="col" >howmany</th>
                  <th scope="col" >time</th>
                </tr>
              </thead>
              <tbody>
                  <% @event1.each do |x| %>
                    <tr>
                      <th scope="row"><%= x.event_id %></th>
                      <th scope="row"><%= x.event.event_name %></th>
                      <th scope="row"><%= x.user.email %></th>
                      <td scope="row"><%= x.user.name %></td>
                      <td scope="row"><%= x.user.student_id %></td>
                      <td scope="row"><%= x.user.phone_number %></td>
                      <td scope="row"><%= x.how_many %></td>
                      <td scope="row"><%= x.time %></td>
                    </tr>
                <% end %>
